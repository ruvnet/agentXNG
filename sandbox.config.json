{
    "template": "python",
    "container": {
      "port": 8000,
      "startScript": "python main.py"
    },
    "hardReloadOnChange": true,
    "openedFiles": ["README.md"],
    "setupTasks": [
      {
        "name": "Install Dependencies",
        "command": "pip install -r requirements.txt"
      }
    ],
    "tasks": {
      "start": {
        "name": "Run Python Script",
        "command": "python main.py",
        "runAtStart": true
      }
    }
  }